        <corners android:radius="360dip" />
        <gradient android:angle="180" android:startColor="#5461AF" android:endColor="#5461AF" />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners android:radius="360dip" />
        <gradient android:angle="180" android:startColor="#5461AF" android:endColor="#5461AF" />
    </shape>
</item>
<item>
    <shape android:shape="rectangle"  >
        <corners android:radius="360dip" />
        <gradient
            android:startColor="#5461AF"
            android:endColor="#5461AF">
        </gradient>
    </shape>
</item>
</selector>
