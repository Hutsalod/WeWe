<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="#383547"
    android:gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent"
    tools:context=".activity.PrivaryPolicy">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
>

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="42dp"
            app:srcCompat="@drawable/ic_logo_vector" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="@string/private_title"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/switch1"
            style="@style/TextAppearance.RocketChat.MessageBody.Highlight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="32dp"
            android:checked="false"
            android:fontFamily="sans-serif-light"
            android:text="Принять политику"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:theme="@style/MySwitch" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_login_with_email2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/button_white"
            android:onClick="privaryOK"
            android:padding="12dp"
            android:text="Настроить WeWe"
            android:textColor="#383547"
            app:layout_constraintBottom_toTopOf="@+id/btn_user_registration"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</RelativeLayout>
