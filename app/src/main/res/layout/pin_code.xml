<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:background="#000000"
    android:gravity="center_horizontal|center_vertical"
    android:layout_height="match_parent"
    tools:context=".activity.PinCode">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/kayboardLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_app_logo" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFF"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_marginBottom="10dp"
                android:text="Добавить PIN код" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/EditTextName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/edit_2"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="***"
                    android:inputType="number"
                    android:textColor="#909092"
                    android:textColorHint="#909092" />

                <Button
                    android:id="@+id/btn15"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ic_backspace"
                    android:onClick="helpB"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />
            </LinearLayout>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="35dp"
                android:columnCount="3"
                android:rowCount="5">

                <Button
                    android:id="@+id/btn1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="1"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="2"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="3"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="4"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="5"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="6"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="7"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="8"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="9"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="right"
                    android:onClick="privaryOK"
                    android:text="Готово"
                    android:textColor="#FFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn11"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/cout_btn_colt_while"
                    android:onClick="helpB"
                    android:text="0"
                    android:textColor="#FFFF"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="30dp"
                    android:gravity="right"
                    android:onClick="closeKeys"
                    android:text="Отмена"
                    android:textColor="#FFFF"
                    android:textSize="18sp" />

            </GridLayout>


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
